import java.net.*;

class udpClient {
  public static void main(String[] a) throws Exception {
    var s=new DatagramSocket(9875);
    var b=new byte[1024];
    for(;;){
      var p=new DatagramPacket(b,b.length);
      s.receive(p);
      var m=new String(p.getData(),0,p.getLength());
      System.out.println("Server: "+m);
      if(m.equalsIgnoreCase("exit")) break;
    }
    s.close();
  }
}


import java.net.*; import java.util.*;

class udpServer {
  public static void main(String[] a) throws Exception {
    var s=new DatagramSocket(9876);
    var ip=InetAddress.getByName("localhost");
    var sc=new Scanner(System.in);
    for(;;){
      var m=sc.nextLine();
      s.send(new DatagramPacket(m.getBytes(),m.length(),ip,9875));
      if(m.equalsIgnoreCase("exit")) break;
    }
    s.close();
  }
}
